@model IEnumerable<MUE.Models.Message>

@{
    ViewBag.Title = "Your Inbox";
}

<h2>Index</h2>

<p>
    
    @using (Html.BeginForm())
    {
    <p>
        Search by message: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
    }
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>
                Message
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser1.Email)
                    <hr>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DATETIMEMADE)
                    <hr>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TEXT)
                    <hr>
                    
                </td>
                <td>

                    @Html.ActionLink("Conversation", "Details", new { id = item.ID })
                    <hr>
                </td>
            </tr>
        }

    </table>
