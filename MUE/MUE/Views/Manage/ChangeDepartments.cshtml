
@{
    ViewBag.Title = "ChangeDepartments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h2>Update Your Selected Field Of Studies</h2>
@using (Html.BeginForm("ExpertRegistration", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div class="form-group">
    @Html.Label("Select a field of study", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownList("1st Departmnet", new List<SelectListItem>{

        new SelectListItem { Text = "Computer Science", Value = "1", Selected = true },
        new SelectListItem { Text="Biology", Value="2"},
        new SelectListItem { Text="History", Value="3"},

    }, "Select Department")
    </div>
</div>
<div class="form-group">
    @Html.Label("Select a field of study", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownList("2nd Department", new List<SelectListItem>{

                    new SelectListItem { Text = "Computer Science", Value = "1"},
        new SelectListItem { Text="Biology", Value="2"},
        new SelectListItem { Text="History", Value="3"},

    }, "Select Department")
    </div>
</div>
<div class="form-group">
    @Html.Label("Select a field of study", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownList("3rd Department", new List<SelectListItem>{

                    new SelectListItem { Text = "Computer Science", Value = "1"},
        new SelectListItem { Text="Biology", Value="2"},
        new SelectListItem { Text="History", Value="3"},

    }, "Select Department")
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-default" value="Save" />
    </div>
</div>




}